{
  "expo": {
    "name": "Petite Annonce",
    "slug": "petite-annonce",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "petiteannonce",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.petiteannonce.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Pour prendre des photos de vos annonces et vérifier votre identité",
        "NSPhotoLibraryUsageDescription": "Pour ajouter des photos à vos annonces",
        "NSLocationWhenInUseUsageDescription": "Pour localiser vos annonces",
        "ITSAppUsesNonExemptEncryption": false
      }
    },

    "android": {
      "package": "com.petiteannonce.ios",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2563EB"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Pour ajouter des photos à vos annonces",
          "cameraPermission": "Pour prendre des photos de vos annonces"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Pour localiser vos annonces"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2563EB"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}